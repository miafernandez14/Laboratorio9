<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Laboratorio9.Tap">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="lblTap1" 
               BackgroundColor="Black" 
               Text="Haz un Tap en la etiqueta para cambiar de color" 
               TextColor="White" 
               HeightRequest="100" />

            <Button x:Name="btnTap1" 
                BorderColor="Black" />

            <Label x:Name="lblTap2" 
               BackgroundColor="Black"  
               Text="Haz un Tap en la etiqueta para cambiar de imagen" 
               TextColor="White" 
               HeightRequest="100" />

            <Image x:Name="image1" 
               Source="c.png" 
               HorizontalOptions="Center" 
               VerticalOptions="CenterAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>